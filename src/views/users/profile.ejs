<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title}) %>
<body>
	<!-- Header -->
	<%- include('../partials/headerNavbar') %>
	<!-- /Header -->
    <main>
        <div>
            <h2>Email:<%= locals.user.email %> </h2>
            <div>
                <img class="profile-image" src="<%= locals.user.avatar %> " alt="<%= locals.user.email %>">
            </div>
            <form action="/users/?_method=DELETE" method="post">
                <button class="buy-now-button" type="submit" style="background-color: red;">Eliminar Usuario</button>            
            </form>
            <form action="/users/avatar/upload" method="GET">
                <button type="submit" class="buy-now-button">Modificar Foto de perfil</button>
            </form>
            
        </div>
    </main>

    <!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->

</body>	
</html>